$min-font = 14px
$max-font = 36px
$line-height-ratio  = $golden
#utp
	lost-flex-container: column;
	box-sizing border-box
	// padding vr-block(1) 
	lost-row 10/12 0 0
	background #1b2b34
	color #fbd07c
	t-p()
	padding-top vr-block(0.5) 
	.utp_youtube
		lost-column 6/12 0 0
		lost-offset 1/12 0 0
		.video-container
			box-sizing border-box
			padding 10px
			min-width 100%
			height 100% 
			border 3px solid #666
			position:relative;
			padding-bottom:56.25%;
			padding-top:30px;
			height:0;
			overflow:hidden;
			iframe
			object
			embed
				position:absolute;
				top:0;
				left:0;
				width:100%;
				height:100%;
	
	.utp_text
		lost-column 5/12 0 0
		box-sizing border-box
		color #fbd07c
		.utp_header
			t-p()
			text-align left
			font-weight 700
			color #f99157
			line-height 1.3
			text-transform none
			margin-bottom vr-block(0.5) 
			span
				color #eb606b

$line-height-ratio  = 0.5
$min-font = 12px
$max-font = 16px
