@lost flexbox flex

@import 'typographic'
typographic()

$min-width = 320px
$max-width = 1140px
$min-font  = 8px
$max-font  = 16px

html
	all initial
	height 100% 

body
	all initial
	lost-utility edit
	t-p()
	height 100%
	background #fff
	font-family $opensans
	color #fbd07c	

.g-center
	lost-center: 1140px 15px

.g-sec, .g-in-sec
	lost-flex-container row
	width 100% 


.g-sec_h
	lost-flex-container: row;
	text-align center
	width 100% 
	
	
.above-all
	position: relative
	z-index 100

img
	display block
	max-width 100%
	height auto

h1, h2, h3
	color #666
	font-family "Days One"
	font-size 2.4em
	font-weight 700
	text-transform uppercase
	text-align center

h2
	color #1b2b34
	// font-size 30px
	// t-p()
	
	// margin 71px auto 57px auto
	text-align center
	
h3
	font-size 18px
	text-align left
	
.g-column
	lost-flex-container: column;
	lost-column 3/12 0 0
	// lost-row 1 0 40px
	box-sizing border-box

.g-c-uw
	lost-flex-container: column;
	width 100%
	justify-content center
	// align-items flex-end

$min-font = 10px
$max-font = 18px
.g-btn
	all initial
	border 3px solid #fff
	border-radius 10px
	font-family "Days One"
	t-p()
	padding vr-block(0.5)
	color white
	margin-top vr-block(1) 
	font-weight 700
	text-transform uppercase
	text-align center

.g-btn_learn-more	
	position: relative
	t-p()
	button: green 'large'
	.hand-icons
		lost-flex-container column
		display: block
		position: absolute
		size vr-block(1.3) vr-block(1.2)
		top vr-block(0.1)
		right vr-block(2.5)
		background svg-load('hand-tap-icon.svg', fill: #000, stroke: #fff) no-repeat
		background-size: contain		
	&:hover
		.hand-icons
			background svg-load('hand-press-icon.svg', fill: #fff) no-repeat
			background-size: contain
			lost-flex-container column			
		
	
.g-btn_call_back
	border 2px solid #5fc79a

.g-utp_buttons-between
	display block
	color white
	font-family Georgia
	font-size 36px
	font-style italic
	margin 0 12px

.g-arrow-up
	background svg-load('arrow-up.svg')
	size vr-block(0.6)
	display: inline-block
	background-size: contain
	vertical-align text-top